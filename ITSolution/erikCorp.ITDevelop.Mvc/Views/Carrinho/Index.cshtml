@model erikCorp.ITDevelop.Mvc.ViewsModel.CarrinhoViewModel

<div id="wrapper">
    <div class="page-content sidebar-page right-sidebar-page clearfix">
        <!-- .page-content-wrapper -->
        <div class="page-content-wrapper">
            <div class="page-content-inner">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <!-- Start col-lg- 3 -->
                    <div class="panel >
                        <!-- Start .panel -->
                        <div class="panel-heading">
                            <h1 class="panel-title">Carrinho de Compras</h1>
                        </div>
                        <div class="panel-body">
                            <div class="scroll" data-height="170">
                                <p>
                                    @Model.mensagem
                                </p>
                                <br />
                                @foreach (var prod in Model.produtos)
                                {
                                    <p>
                                        @prod.nome
                                    </p>
                                    <br />
                                    <p>
                                        @prod.data
                                    </p>
                                    <br />
                                    <p>
                                        @prod.temEstoque
                                    </p>
                                    <br />
                                    <p>
                                        @prod.valor
                                    </p>
                                    <br />
                                    <p>
                                        @prod.id
                                    </p>
                                    <br />
                                    <p>_________________________________________________</p>
                                }
                                <p>
                                    @Model.valoTotal
                                </p>
                                <br />

                            </div>
                        </div>
                    </div>
                    <!-- End .panel -->
                </div>
            </div>
        </div>
    </div>
</div>

